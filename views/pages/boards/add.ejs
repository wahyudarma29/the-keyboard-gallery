<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../../partials/head") %>
  </head>
  <body>
    <header><%- include("../../components/navbar") %></header>
    <main>
      <section id="form" class="my-5 container">
        <form action="/board" method="post" enctype="multipart/form-data">
          <div class="form-group my-2">
            <label for="board-name">Board Name</label>
            <input
              type="text"
              class="form-control"
              id="board-name"
              name="name"
            />
          </div>
          <div class="form-group my-2">
            <label for="board-name">Maker</label>
            <input
              type="text"
              class="form-control"
              id="board-name"
              name="brand"
            />
          </div>
          <div class="form-group my-2">
            <label for="board-name">Price</label>
            <input
              type="number"
              class="form-control"
              id="board-name"
              name="price"
            />
          </div>
          <div class="form-group my-2">
            <label for="size">Layout</label>
            <select class="form-control" id="size" name="layout">
              <option value="60">60</option>
              <option value="65">65</option>
              <option value="TKL">TKL</option>
              <option value="Alice">Alice</option>
              <option value="Cursed">Cursed</option>
            </select>
          </div>
          <div class="form-group my-2">
            <label for="board-image">Board Image</label>
            <br />
            <img
              id="uploadPreview"
              class="my-3"
              style="width: 100px; height: 100px"
            />
            <input
              type="file"
              class="form-control-file my-2"
              id="board-image"
              name="img"
              id="img"
            />
          </div>
          <div class="form-group my-2">
            <label for="board-detail">Describe your board here</label>
            <textarea
              class="form-control"
              id="board-detail"
              rows="3"
              name="desc"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-outline-primary mt-4">
            Add
          </button>
        </form>
      </section>
    </main>
    <script src="/public/scripts/previewImageScript.js" />
    <%- include("../../partials/scripts") %>
  </body>
</html>
